{
  "name": "orbit-app",
  "version": "1.0.7",
  "description": "Local-first journal and productivity desktop app",
  "author": "iwnass",
  "main": "build/electron.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/iwnass/Orbit.git"
  },
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "cross-env BROWSER=none react-scripts start",
    "start:electron": "electron . --electron-main=electron/main.js",
    "build": "react-scripts build && npm run copy-electron",
    "copy-electron": "node -e \"require('fs').cpSync('electron', 'build/electron', {recursive: true})\" && node -e \"require('fs').copyFileSync('electron/main.js', 'build/electron.js')\" && node -e \"require('fs').copyFileSync('electron/preload.js', 'build/preload.js')\"",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "dist": "npm run build && electron-builder --win --x64",
    "publish": "npm run build && electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.orbit.app",
    "productName": "Orbit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "publisherName": "iwnass"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "iwnass",
      "repo": "Orbit",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "date-fns": "^3.0.0",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.1.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.2.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}